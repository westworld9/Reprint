<div class="row header">
  <div class="col-md-8 offset-md-2"> 
    <h2 class="text-center">新規登録</h2>
    <br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/devisemes'%>
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, placeholder: "fullname",class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "email",class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off",placeholder: "password",class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.file_field :avatar,class:"form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up" ,class:"btn btn-normal btn-block"%>
  </div>
  <br/>
  
  <div class="form-group"> 
   <%= link_to user_twitter_omniauth_authorize_path,class:"btn btn-block btn-primary" do %>
     <i class="fab fa-twitter"></i> Twitterでログイン
   <% end %>
  </div>
<% end %>


  </div>
</div>
