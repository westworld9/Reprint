<div class="card mt-2"> 
  <div class="card-body">
    <% if message.user.avatar.url.present? %>
      <%= image_tag message.user.avatar_url, class: "rounded-circle avatar-medium" %> 
    <% else %>  
      <%= image_tag "/assets/icon.png",  class:"rounded-circle avatar-medium" %>
    <% end %> 
    <strong><%= message.user.name %></strong>
    <span class="float-right"><%= message.message_time %></span>
    <br/> 
    <div class="row-space-2">
      <%= message.body %> 
    </div>
  </div>
</div>